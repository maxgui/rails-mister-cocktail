<div class="container">
<h1 class='text-center'>Cocktails Index</h1>
  <% @cocktails.each do |cocktail| %>
    <div class="card">
      <div class="card-category">
          <h2><%= cocktail.name.capitalize %></h2>
        </%>
      </div>
      <%= link_to "", cocktail_path(cocktail), class: "card-link" %>
      <% if cocktail.picture? %>
        <%= cl_image_tag cocktail.picture.path, width: 400, height: 100, crop: :fill %>
        <% end %>
    </div>
  <% end %>
</div>


<div class="container text-center">
  <%= link_to 'Add a new cocktail', new_cocktail_path(@cocktail), class: 'btn btn-warning' %>
</div>

