<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="product">
        <div class='product-body'>
          <h3><%= @cocktail.name.capitalize %></h3>
          <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %> - <%= dose.ingredient.name %>
          <%= link_to "Delete dose", dose_path(dose), data: {:confirm => 'Are you sure?'}, method: :delete, class: 'btn btn-danger' %>
          <% end %>
           <% if @cocktail.picture? %>
        <%= cl_image_tag @cocktail.picture.path, width: 500, height: 300, crop: :fill %>
        <% end %>
          </li>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container text-center">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: "form-control" %>
        <%= f.association :ingredient %>
        </div>
        <%= f.submit "Create Dose", class: "btn btn-primary" %>
      <% end  %>
    </div>
  </div>
</div>

<div class="container text-center">
  <%= link_to 'Back to cocktails', cocktails_path, class: 'btn btn-success' %>
</div>


