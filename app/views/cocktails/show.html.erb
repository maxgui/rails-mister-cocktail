<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="product">
        <div class='product-body'>
          <h3><%= @cocktail.name.capitalize %></h3>
          <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %> - <%= dose.ingredient.name %>
          <%= link_to "Delete dose", dose_path(dose), data: {:confirm => 'Are you sure?'}, method: :delete, class: 'btn btn-danger' %>
          <% end %>
          </li>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container text-center">
  <%= link_to 'Back to cocktails', cocktails_path, class: 'btn btn-success' %>
  <%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail), class: 'btn btn-success' %>
</div>
